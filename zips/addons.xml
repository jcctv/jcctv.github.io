<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.jcctv" name="JCCTV Wizard" version="0.1.0" provider-name="jcc">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">JCCTV Wizard</summary>
    <description lang="en">JCCTV Wizard offers a complete TV solution.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.jcctv" name="JCCTV Repository" version="1.0" provider-name="JCC">
    <extension point="xbmc.addon.repository" name="JCCTV Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/jcctv/jcctv.github.io/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/jcctv/jcctv.github.io/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://github.com/jcctv/jcctv.github.io/raw/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>JCCTV's Kodi Repository</summary>
        <description>JCCTV Builds</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
